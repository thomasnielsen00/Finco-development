{
  "name": "finco-server",
  "version": "1.0.0",
  "description": "Finco server",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "nodemon src/server.ts --exec \"npx babel-node -x .ts --require ./config\"",
    "build": "rimraf dist && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "test": "jest --setupFiles ./test/config.ts"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "browserslist": [
    "maintained node versions"
  ],
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "express": "^4.18.2",
    "mysql2": "^2.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.19.0",
    "@babel/node": "^7.18.10",
    "@babel/preset-env": "^7.19.0",
    "@babel/preset-typescript": "^7.18.6",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.15.5",
    "babel-jest": "^29.0.2",
    "jest": "^29.0.2",
    "nodemon": "^2.0.21",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
